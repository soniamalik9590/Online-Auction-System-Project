<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Alata&family=Pacifico&family=Poppins:wght@200;400;500&family=Roboto:ital,wght@1,100&display=swap"
      rel="stylesheet"
    />

    <!-- style.css  -->
    <link rel="stylesheet" href="./css/Home_Categories_LetestProducts.css" />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />

    <!-- fontawesome cdn link -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      integrity="sha512-PgQMlq+nqFLV4ylk1gwUOgm6CtIIXkKwaIHp/PAIWHzig/lKZSEGKEysh0TCVbHJXCLN7WetD8TFecIky75ZfQ=="
      crossorigin="anonymous"
    />

    <title>BIDnBUY</title>
  </head>

  <body id="top">
    <!-- ==============header menu section starts here============== -->
    <section class="header_menu" id="header_menu">
      <div class="container-fluid px-0 shadow">
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-3">
          <a class="navbar-brand pl-5 pl-small-0" href="/">
            <img
              src="./HomeImages/bidlogo.jpg"
              class="img img-fluid"
              width="100px"
              alt="logo"
            />
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mx-auto">
              <li class="nav-item active">
                <% if(locals.username){%>
                <a class="nav-link" id="a_1"
                  ><%= locals.username? 'Hi, '+ username:'Sign in' %>
                </a>
                <%}else{%>
                <a class="nav-link" href="/login" id="a_1"
                  ><%= locals.username? 'Hi, '+ username:'Sign in' %>
                </a>
                <%}%>
              </li>

              <!-- <li class="nav-item">
                <a class="nav-link" href="/Latest" id="a_2">Latest</a>
              </li> -->

              <li class="nav-item active">
                <a class="nav-link" href="/AddingProducts" id="a_3">Category</a>
              </li>

              <li class="nav-item active">
                <a class="nav-link" href="/AddingProducts" id="a_3">Admin</a>
              </li>

              <li class="nav-item">
                <% if(locals.username){%>
                <a class="nav-link" href="/logout" id="a_1"><%= 'Logout' %> </a>
                <%}%>
              </li>
            </ul>
          </div>
        </nav>
      </div>
    </section>
    <!-- ==============header menu section ends here============== -->

    <!-- ==============category starts here============== -->
    <section class="products py-5 my-5 bg-light" id="products">
      <div class="container">
        <div class="section_title text-center mb-5">
          <h1 class="text-capitalize">Categories</h1>
        </div>
        <div class="row mb-5">
          <div class="col-md-4 col-12">
            <div class="single_product shadow text-center p-1">
              <div class="product_img">
                <a href="/category_T-shirt"
                  ><img
                    src="categoriesImages/virat_kohli.PNG"
                    class="img img-fluid rounded"
                    alt=""
                  />
                  <div class="new_product">
                    <span class="badge py-2 px-3 badge-pill badge-danger"
                      >Go</span
                    >
                  </div>
                </a>
              </div>
              <div class="product-caption my-3">
                <h4>
                  <a href="/category_T-shirt">Signed T-Shirts</a>
                </h4>
              </div>
              <div class="mt-3">
                <p>Signed T-shirts by great cricket players</p>
              </div>
            </div>
          </div>
          <div class="col-md-4 col-12">
            <div
              class="single_product shadow text-center p-1 mt-small-5 mb-small-5"
            >
              <div class="product_img">
                <a href="/category_paintings"
                  ><img
                    src="categoriesImages/16.jpg"
                    class="img img-fluid rounded"
                    alt=""
                  />

                  <div class="new_product">
                    <span class="badge py-2 px-3 badge-pill badge-danger"
                      >Go</span
                    >
                  </div>
                </a>
              </div>
              <div class="product-caption my-3">
                <h4>
                  <a href="/category_paintings">Paintings </a>
                </h4>
              </div>
              <div class="mt-3">
                <p>Great Paintings definitely wins your hearts</p>
              </div>
            </div>
          </div>
          <div class="col-md-4 col-12">
            <div class="single_product shadow text-center p-1">
              <div class="product_img">
                <a href="/category_ancient"
                  ><img
                    src="categoriesImages/furniture2.jpg"
                    class="img img-fluid rounded"
                    alt=""
                  />

                  <div class="new_product">
                    <span class="badge py-2 px-3 badge-pill badge-danger"
                      >Go</span
                    >
                  </div>
                </a>
              </div>
              <div class="product-caption my-3">
                <h4>
                  <a href="/category_ancient"> Antics</a>
                </h4>
              </div>
              <div class="mt-3">
                <p>Old is Gold</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- ==============category ends here============== -->

    <!-- ==============footer starts here============== -->
    <hr />
    <section class="footer_section pt-5 pb-2" id="footer_section">
      <footer>
        <div class="border-top">
          <h6 class="text-center mt-5" id="footx">
            Copyright Â©2022 All rights reserved
          </h6>
        </div>
      </footer>
    </section>
    <div class="backtop">
      <a
        id="button"
        href="#top"
        class="btn btn-lg btn-outline-danger"
        role="button"
      >
        <i class="fas fa-chevron-up text-dark"></i>
      </a>
    </div>

    <div class="backtop_1">
      <a
        id="button"
        href="#top"
        class="btn btn-lg btn-outline-danger"
        role="button"
      >
        <i class="fas fa-chevron-up text-dark"></i>
      </a>
    </div>
    <!-- ==============footer ends here============== -->
  </body>
</html>
