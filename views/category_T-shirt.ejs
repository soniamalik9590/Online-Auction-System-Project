            <div class="value seconds">32</div>
            <div class="type">seconds</div>
          </div>
        </div>
      </div>
    </div>
  </body>

  <script>
    let time = { minutes: 2, seconds: 0 };

    for (i = 0; i < 10; i++) {
      document.querySelectorAll(".seconds")[i].innerHTML = time.seconds;
      document.querySelectorAll(".minutes")[i].innerHTML = time.minutes;
      document.querySelectorAll(".hours")[i].innerHTML = 00;
    }

    let loop = setInterval(() => {
      if (time.seconds == 0) {
        time.minutes--;
        time.seconds = 60;

        for (i = 0; i < 10; i++) {
          document.querySelectorAll(".minutes")[i].innerHTML = time.minutes;
        }
      }

      time.seconds--;

      if (time.seconds == 0 && time.minutes == 0) {
        clearInterval(loop);
      }

      for (i = 0; i < 10; i++) {
        document.querySelectorAll(".seconds")[i].innerHTML = time.seconds;
      }
    }, 1000);
  </script>
